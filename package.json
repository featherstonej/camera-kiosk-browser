{
  "name": "camera-kiosk-browser",
  "homepage": "https://github.com/james/camera-kiosk-browser",
  "version": "1.0.6",
  "description": "Kiosk browser for displaying security camera feeds on Raspberry Pi",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder --linux --armv7l",
    "build:arm64": "electron-builder --linux --arm64",
    "build:x64": "electron-builder --linux --x64"
  },
  "keywords": [
    "kiosk",
    "camera",
    "security",
    "raspberry-pi"
  ],
  "author": "James <james@example.com>",
  "license": "MIT",
  "build": {
    "appId": "com.camera.kiosk",
    "productName": "Camera Kiosk Browser",
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "armv7l",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    },
    "extraResources": [
      "config.json.example"
    ]
  },
  "devDependencies": {
    "electron": "32.0.0",
    "electron-builder": "^26.4.0"
  }
}